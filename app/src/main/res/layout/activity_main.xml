<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/textView"
        android:layout_width="412dp"
        android:layout_height="106dp"
        android:text="Calculator"
        android:textColor="#050303"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.002" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="411dp"
        android:layout_height="189dp"
        android:ems="10"
        android:gravity="right|center"
        android:text="0"
        android:inputType="textPersonName"
        android:textSize="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.159" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buAC"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="AC"
                android:onClick="acEvent"
                android:backgroundTint="@color/design_default_color_on_secondary"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/buback"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="BACK"
                android:backgroundTint="@color/design_default_color_on_secondary"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/bumodulus"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="%"
                android:onClick="numberOperator"
                android:backgroundTint="@color/design_default_color_on_secondary"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/budivide"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="/"
                android:onClick="numberOperator"
                android:backgroundTint="@color/design_default_color_on_secondary"
                android:textColor="@color/white"
                android:textSize="22sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/num7"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="7"
                android:onClick="numberEvent"
                android:backgroundTint="@color/design_default_color_on_secondary"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/num8"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="8"
                android:onClick="numberEvent"
                android:backgroundTint="@color/design_default_color_on_secondary"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/num9"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="9"
                android:onClick="numberEvent"
                android:backgroundTint="@color/design_default_color_on_secondary"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/bumultiply"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="X"
                android:onClick="numberOperator"
                android:backgroundTint="@color/design_default_color_on_secondary"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/num4"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="4"
                android:onClick="numberEvent"
                android:backgroundTint="@color/design_default_color_on_secondary"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/num5"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="5"
                android:onClick="numberEvent"
                android:backgroundTint="@color/design_default_color_on_secondary"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/num6"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="6"
                android:onClick="numberEvent"
                android:backgroundTint="@color/design_default_color_on_secondary"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/buminus"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="-"
                android:onClick="numberOperator"
                android:backgroundTint="@color/design_default_color_on_secondary"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/num1"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="1"
                android:onClick="numberEvent"
                android:backgroundTint="@color/design_default_color_on_secondary"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/num2"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="2"
                android:onClick="numberEvent"
                android:backgroundTint="@color/design_default_color_on_secondary"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/num3"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="3"
                android:onClick="numberEvent"
                android:backgroundTint="@color/design_default_color_on_secondary"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/buadd"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="+"
                android:onClick="numberOperator"
                android:backgroundTint="@color/design_default_color_on_secondary"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </TableRow>
        <TableRow>

            <Button
                android:id="@+id/buextend"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="//"
                android:backgroundTint="@color/design_default_color_on_secondary"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/num0"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="0"
                android:onClick="numberEvent"
                android:backgroundTint="@color/design_default_color_on_secondary"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/budot"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="."
                android:onClick="numberEvent"
                android:backgroundTint="@color/design_default_color_on_secondary"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/buequal"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="="
                android:onClick="equalEvent"
                android:backgroundTint="@color/design_default_color_on_secondary"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </TableRow>
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>